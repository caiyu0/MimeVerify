@{
    ViewData["Title"] = "Client Side Mime Verify";
}
<h4>Verify MIME type before uploading a file(avoid file extension change etc...)</h4>
<br />
<div class="row">
    <section>
        <form method="post" enctype="multipart/form-data"
              asp-controller="UploadFiles" asp-action="Index">
            <div class="form-group">
                <div class="col-md-10">
                    <label for="file1" class="custom-file-upload">
                        <i class="fa fa-cloud-upload"></i> Choose a file
                    </label>
                    <input id="btn1" type="submit" value="Upload file" />&nbsp;&nbsp;&nbsp;&nbsp;
                    <input id="file1" type="file" name="files" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label></label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label id="fn">File name: </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label id="binaryValue">Bytes (decimal):</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label id="hexValue">Bytes (hex): </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label id="mimetype">File MIME TYPE: </label>
                </div>
            </div>
        </form>
        <div class="col-md-10">
            <label></label>
        </div>
        <div class="col-md-10">
            <label></label>
        </div>
            <div class="col-md-10">
                <label>MIME type example</label>
            </div>
            <div class="col-md-11">
                <img src="~/img/mime.PNG" alt="MIME Table" />
            </div>
    </section>
</div>
